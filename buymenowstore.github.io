    <script>
        // Scroll animations for regular content
        function handleScrollAnimations() {
            const elements = document.querySelectorAll('.fade-in');
            elements.forEach(element => {
                const elementTop = element.getBoundingClientRect().top;
                const elementVisible = 150;
                
                if (elementTop < window.innerHeight - elementVisible) {
                    element.classList.add('visible');
                }
            });
        }

        // Handle scroll effect for hero section
        function handleHeroScroll() {
            const hero = document.querySelector('.hero');
            const heroContent = document.getElementById('hero-content');
            const scrollY = window.scrollY;
            const heroHeight = hero.offsetHeight;
            
            // Calculate scroll progress (0 to 1)
            const scrollProgress = Math.min(scrollY / heroHeight, 1);
            
            // Background zoom effect
            const bgScale = 1 + scrollProgress * 0.5;
            hero.style.setProperty('--bg-scale', bgScale);
            
            // Content zoom and fade effect
            const contentScale = 1 - scrollProgress * 0.2;
            const contentOpacity = 1 - scrollProgress * 1.5;
            
            heroContent.style.transform = `scale(${Math.max(0.8, contentScale)})`;
            heroContent.style.opacity = Math.max(0, contentOpacity);
        }

        // Initialize everything when page loads
        window.addEventListener('load', () => {
            handleScrollAnimations();
            // Set initial background scale CSS variable
            document.querySelector('.hero').style.setProperty('--bg-scale', 1);
        });

        // Handle scroll events
        window.addEventListener('scroll', () => {
            handleScrollAnimations();
            handleHeroScroll();
        });
    </script>
